    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=server",
                    "--package=zappy_42"
                ],
                "filter": {
                    "name": "server",
                    "kind": "bin"
                }
            },
            "args": ["-x", "10", "-y", "10", "-p", "1312", "-c", "1", "-n", "lala", "-t", "50"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
